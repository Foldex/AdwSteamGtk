<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="adwaita-steam-gtk">
  <schema id="io.github.Foldex.AdwSteamGtk" path="/io/github/Foldex/AdwSteamGtk/">

    <!-- General -->
    <key name="color-theme-options" type="s">
      <default>"Adwaita"</default>
    </key>

    <key name="web-theme-options" type="s">
      <default>"Full"</default>
      <choices>
        <choice value="Base"/>
        <choice value="Full"/>
        <choice value="None"/>
      </choices>
    </key>

    <key name="no-rounded-corners-switch" type="b">
      <default>false</default>
    </key>

    <!-- Window Controls -->
    <key name="window-controls-options" type="s">
      <default>"Default"</default>
      <choices>
        <choice value="Default"/>
        <choice value="Right-All"/>
        <choice value="Left"/>
        <choice value="Left-All"/>
        <choice value="None"/>
      </choices>
    </key>

    <key name="window-controls-style-options" type="s">
      <default>"Default"</default>
      <choices>
        <choice value="Default"/>
        <choice value="Dots"/>
      </choices>
    </key>

    <!-- Library -->
    <key name="library-sidebar-options" type="s">
      <default>"Show"</default>
      <choices>
        <choice value="Show"/>
        <choice value="Hover Only"/>
      </choices>
    </key>

    <key name="hide-whats-new-switch" type="b">
      <default>false</default>
    </key>

    <!-- Login -->
    <key name="login-qr-options" type="s">
      <default>"Show"</default>
      <choices>
        <choice value="Show"/>
        <choice value="Hover Only"/>
        <choice value="Hide"/>
      </choices>
    </key>

    <!-- Top Bar -->
    <key name="hide-bp-button-switch" type="b">
      <default>false</default>
    </key>

    <key name="hide-nav-url-switch" type="b">
      <default>false</default>
    </key>

    <key name="show-nav-arrows-switch" type="b">
      <default>false</default>
    </key>

    <key name="original-topbar-switch" type="b">
      <default>false</default>
    </key>

    <!-- Bottom Bar -->
    <key name="hide-bottom-bar-switch" type="b">
      <default>false</default>
    </key>

    <!-- Prefs -->
    <key name="prefs-autostart-update-check" type="b">
      <default>false</default>
    </key>

    <key name="prefs-ui-preview-theme" type="b">
      <default>true</default>
    </key>

    <key name="prefs-beta-support" type="b">
      <default>false</default>
    </key>

    <key name="prefs-install-fonts" type="b">
      <default>false</default>
    </key>

    <key name="prefs-install-custom-css" type="b">
      <default>false</default>
    </key>

  </schema>
</schemalist>
