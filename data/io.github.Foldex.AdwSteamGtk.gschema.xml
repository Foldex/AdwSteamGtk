<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="adwaita-steam-gtk">
  <schema id="io.github.Foldex.AdwSteamGtk" path="/io/github/Foldex/AdwSteamGtk/">

    <!-- General -->
    <key name="color-theme-options" type="s">
      <default>"Adwaita"</default>
    </key>

    <key name="no-rounded-corners-switch" type="b">
      <default>false</default>
    </key>

    <!-- Window Controls -->
    <key name="window-controls-options" type="s">
      <default>"Auto"</default>
      <choices>
        <choice value="Auto"/>
        <choice value="Adwaita"/>
        <choice value="Windows"/>
        <choice value="MacOS"/>
      </choices>
    </key>

    <key name="window-controls-layout-options" type="s">
      <default>"Auto"</default>
      <choices>
        <choice value="Auto"/>
        <choice value="Adwaita"/>
        <choice value="Elementary"/>
        <choice value="MacOS"/>
        <choice value="Windows"/>
      </choices>
    </key>

    <!-- Library -->
    <key name="library-sidebar-options" type="s">
      <default>"Show"</default>
      <choices>
        <choice value="Show"/>
        <choice value="Hover Only"/>
      </choices>
    </key>

    <key name="hide-whats-new-switch" type="b">
      <default>false</default>
    </key>

    <!-- Login -->
    <key name="login-qr-options" type="s">
      <default>"Show"</default>
      <choices>
        <choice value="Show"/>
        <choice value="Hover Only"/>
        <choice value="Hide"/>
      </choices>
    </key>

    <!-- Prefs -->
    <key name="prefs-autostart-update-check" type="b">
      <default>false</default>
    </key>

    <key name="prefs-ui-preview-theme" type="b">
      <default>true</default>
    </key>

    <key name="prefs-beta-support" type="b">
      <default>false</default>
    </key>

    <key name="prefs-install-custom-css" type="b">
      <default>false</default>
    </key>

  </schema>
</schemalist>
